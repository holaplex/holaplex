{
  "name": "holaplex-builder",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "lint": "next lint",
    "db:schema:push": "prisma db push",
    "db:seed": "prisma db seed --preview-feature",
    "db:schema:format": "prisma format",
    "db:migrate:create": "prisma migrate dev",
    "db:migrate": "prisma migrate deploy",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts'",
    "ts-node": "ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\" -r tsconfig-paths/register",
    "dev:theme": "ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\" -T ./hacks/demo-theme.ts"
  },
  "dependencies": {
    "@prisma/client": "^2.25.0",
    "@samuelmeuli/font-manager": "^1.4.0",
    "antd": "^4.16.7",
    "arweave": "^1.10.15",
    "color": "^3.1.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "crypto": "^1.0.1",
    "fetch": "^1.1.0",
    "final-form": "^4.20.2",
    "fs-extra": "^10.0.0",
    "next": "11.0.1",
    "next-images": "^1.8.1",
    "next-plugin-antd-less": "^1.3.0",
    "polished": "^4.1.3",
    "prisma": "2.25.0",
    "ramda": "^0.27.1",
    "react": "17.0.2",
    "react-color": "^2.19.3",
    "react-device-detect": "^1.17.0",
    "react-dom": "17.0.2",
    "react-toastify": "^7.0.4",
    "styled-components": "^5.3.0",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "@types/chai": "^4.2.19",
    "@types/color": "^3.0.2",
    "@types/cors": "^2.8.10",
    "@types/formidable": "^1.2.2",
    "@types/gtag.js": "^0.0.7",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.4",
    "@types/ramda": "^0.27.41",
    "@types/react": "17.0.11",
    "@types/spark-md5": "^3.0.2",
    "@types/styled-components": "^5.1.10",
    "arconnect": "^0.2.9",
    "babel-plugin-import": "^1.13.3",
    "chai": "^4.3.4",
    "eslint": "7.29.0",
    "eslint-config-next": "11.0.1",
    "mocha": "^9.0.1",
    "nodemon": "^2.0.12",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.4"
  }
}
